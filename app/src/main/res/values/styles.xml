<resources>

    <!-- Base application theme. -->
    <style name="AppMaterialTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorPrimaryVariant">@color/colorPrimaryDark</item>
        <item name="colorOnPrimary">@color/colorPrimaryText</item>

        <item name="colorSecondary">@color/colorSecondary</item>
        <item name="colorSecondaryVariant">@color/colorSecondaryDark</item>
        <item name="colorOnSecondary">@color/colorSecondaryText</item>

        <item name="android:colorBackground">@color/colorBackground</item>
        <item name="colorOnBackground">@color/colorBackgroundText</item>
        <item name="colorSurface">@color/colorSurface</item>
        <item name="colorOnSurface">@color/colorSurfaceText</item>

    </style>

    <style name="SplashTheme" parent="AppMaterialTheme">
        <item name="android:windowBackground">@drawable/splash_background</item>
    </style>

    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/colorTribePrimary</item>
        <item name="colorPrimaryDark">@color/colorTribePrimaryDark</item>
        <item name="colorAccent">@color/colorTribeAccent</item>

    </style>

    <style name="LoginTextInput" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxBackgroundColor">#F7F7F7</item>
        <item name="boxStrokeColor">#EAEAEA</item>
        <item name="boxStrokeWidth">0.5dp</item>
        <item name="colorSecondary">#AEB5C4</item>
        <item name="android:textColorHint">#AEB5C4</item>
        <item name="hintTextColor">#AEB5C4</item>
    </style>

</resources>
